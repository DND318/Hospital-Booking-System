<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Booking</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar">
        <div class="logo">
            <img src="/logo.jpg" alt="Logo"> <!-- Replace with your logo -->
            <span>Abubupital</span>
        </div>
        <ul class="nav-links">
            <li><a href="homepage.html"><span>üè†</span> Home</a></li>
            <li><a href="/appointments" class="active"><span>üìÖ</span> Appointments</a></li>
            <li><a href="/ApplyDoctor"><span>üîë</span> Apply Doctor</a></li>
            <li><a href="/login"><span>‚Ü©Ô∏è</span> Logout</a></li>
        </ul>
        <!-- <button class="btn-learn-more">Learn More</button> -->
    </nav>

    <!-- Main Content -->
    <div class="main-container">
        <div class="top-row">
            <% doctors.forEach(function(doctor) { %>
                <div class="doctor-info-box">
                    <a href="/doctor-details/<%= doctor._id %>" class="doctor-link">
                        <h2 class="doctor-name"><%= doctor.fullName %></h2>
                        <hr>
                        <p><strong>Specialization:</strong> <%= doctor.specialization %></p>
                        <p><strong>Phone Number:</strong> <%= doctor.phone %></p>
                        <p><strong>Address:</strong> <%= doctor.address %></p>
                        <p><strong>Fee per Visit:</strong> $<%= doctor.fee %></p>
                        <p><strong>Timings:</strong> <%= doctor.startTime %> - <%= doctor.endTime %></p>
                    </a>
                </div>                
            <% }); %>
        </div>
    </div>
</body>

</html>
